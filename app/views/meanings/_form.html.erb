<% if current_user && (current_user.has_role? :admin) %>

<%= form_for @meaning, html: { class: "form-horizontal meaning" } do |f| %>

    <% if @meaning.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@meaning.errors.count, "error") %> 使得这个 meaning 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @meaning.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :content, class: 'form-control' %>
    </div>
    <%= error_span(@meaning[:content]) %>
  </div>
  <div class="form-group">
    <%= f.label :word_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :word_id, class: 'form-control' %>
    </div>
    <%= error_span(@meaning[:word_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= error_span(@meaning[:deleted_at]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            meanings_path, class: 'btn btn-default' %>

<% end %>

<% else %>

<%= form_for @meaning, html: { class: "form-horizontal meaning" } do |f| %>

    <% if @meaning.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@meaning.errors.count, "error") %> 使得这个 meaning 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @meaning.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :word_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :word_id, class: 'form-control' %>
    </div>
    <%= error_span(@meaning[:word_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :content, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.cktext_area :content, class: 'form-control' %>
    </div>
    <%= error_span(@meaning[:content]) %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            meanings_path, class: 'btn btn-default' %>

<% end %>


<% end %>
