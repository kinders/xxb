<%= form_for @onboard, html: { class: "form-horizontal onboard" } do |f| %>

    <% if @onboard.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@onboard.errors.count, "error") %> 使得这个 onboard 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @onboard.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:user_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :begin_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :begin_at, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:begin_at]) %>
  </div>
  <div class="form-group">
    <%= f.label :expire_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :expire_at, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:expire_at]) %>
  </div>
  <div class="form-group">
    <%= f.label :end_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :end_at, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:end_at]) %>
  </div>
  <div class="form-group">
    <%= f.label :remote_ip, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :remote_ip, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:remote_ip]) %>
  </div>
  <div class="form-group">
    <%= f.label :http_user_agent, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :http_user_agent, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:http_user_agent]) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= error_span(@onboard[:deleted_at]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            onboards_path, class: 'btn btn-default' %>

<% end %>
