<%= form_for @quiz_item, html: { class: "form-horizontal quiz_item" } do |f| %>

    <% if @quiz_item.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@quiz_item.errors.count, "error") %> 使得这个 quiz_item 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @quiz_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
    <%= error_span(@quiz_item[:user_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :quiz_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :quiz_id, class: 'form-control' %>
    </div>
    <%= error_span(@quiz_item[:quiz_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :practice_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :practice_id, class: 'form-control' %>
    </div>
    <%= error_span(@quiz_item[:practice_id]) %>
  </div>
  <div class="form-group">
    <%= f.label :isright, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :isright, class: 'form-control' %>
    </div>
    <%= error_span(@quiz_item[:isright]) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= error_span(@quiz_item[:deleted_at]) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            quiz_items_path, class: 'btn btn-default' %>

<% end %>
