<%= form_for @teaching, :html => { :class => "form-horizontal teaching" } do |f| %>

    <% if @teaching.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@teaching.errors.count, "error") %> 阻止保存该教学方案</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @teaching.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if current_user.has_role? :admin %>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= f.error_span(:user_id) %>
  </div>
  <div class="control-group">
    <%= f.label :lesson_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lesson_id, :class => 'form-control' %>
    </div>
    <%= f.error_span(:lesson_id) %>
  </div>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= f.error_span(:title) %>
  </div>

  <hr>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            teachings_path, :class => 'btn btn-default' %>

  <% else %>

  <div class="form-group">
    <%= f.label "名称", :class => 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= f.error_span(:title) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            teachings_path, :class => 'btn btn-default' %>
  <% end %>

<% end %>
