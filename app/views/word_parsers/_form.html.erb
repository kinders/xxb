<%= form_for @word_parser, html: { class: "form-horizontal word_parser" } do |f| %>

    <% if @word_parser.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@word_parser.errors.count, "error") %> 使得这个 word_parser 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @word_parser.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :word_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :word_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:word_id) %>
  </div>
  <div class="form-group">
    <%= f.label :lesson_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :lesson_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:lesson_id) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= f.error_span(:deleted_at) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            word_parsers_path, class: 'btn btn-default' %>

<% end %>
