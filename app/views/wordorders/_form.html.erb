<% if current_user.has_role? :admin %>

<%= form_for @wordorder, html: { class: "form-horizontal wordorder" } do |f| %>

    <% if @wordorder.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@wordorder.errors.count, "error") %> 使得这个 wordorder 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @wordorder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:user_id) %>
  </div>
  <div class="form-group">
    <%= f.label :wordmap_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :wordmap_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:wordmap_id) %>
  </div>
  <div class="form-group">
    <%= f.label :word_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :word_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:word_id) %>
  </div>
  <div class="form-group">
    <%= f.label :serial, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :serial, class: 'form-control' %>
    </div>
    <%= f.error_span(:serial) %>
  </div>
  <div class="form-group">
    <%= f.label :deleted_at, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :deleted_at, class: 'form-control' %>
    </div>
    <%= f.error_span(:deleted_at) %>
  </div>


  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            wordorders_path, class: 'btn btn-default' %>

<% end %>

<% else %>

<%= form_for @wordorder, html: { class: "form-horizontal wordorder" } do |f| %>

    <% if @wordorder.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@wordorder.errors.count, "error") %> 使得这个 wordorder 无法保存：</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @wordorder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :word_id, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :word_id, class: 'form-control' %>
    </div>
    <%= f.error_span(:word_id) %>
  </div>
  <div class="form-group">
    <%= f.label :serial, class: 'control-label col-sm-2' %>
    <div class="controls col-sm-10">
      <%= f.text_field :serial, class: 'form-control' %>
    </div>
    <%= f.error_span(:serial) %>
  </div>

  <%= f.submit nil, class: 'btn btn-primary col-sm-offset-2' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            wordorders_path, class: 'btn btn-default' %>

<% end %>

<% end %>
