<div class="container col-xs-12 col-sm-10 col-md-8 affix">
  <div class="btn-toolbar pull-right" role="toolbar" arial-label="toolbar">
    <div class="btn-group" role="btn-group" arial-label="navigation">
      <%= link_to t('.retreat', default: t("helpers.links.retreat")), 
        :back, 
        class: 'btn btn-default', 
        tabindex: 81, 
        "data-toggle": "tooltip", 
        "data-placement": "bottom", 
        title: t('.retreat', default: [:"helpers.titles.retreat"]) %>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    包含<strong><%= @word.name %></strong>的课文（共<%= @lessons_have_word.size %>个）
  </div>
  <div class="panel-body">
    <div class="row">
      <% @lessons_have_word.each do |lesson_id| %>
        <% lesson = Lesson.find(lesson_id) %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%= link_to lesson.title, lesson_path(lesson) %>
      </div>
      <% end %>
    </div>
  </div>
</div>

