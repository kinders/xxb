<%- model_class = Word -%>

<div class="container col-xs-12 col-sm-10 col-md-8 affix">
  <div class="btn-toolbar pull-right" role="toolbar" arial-label="toolbar">
    <div class="btn-group" role="btn-group" arial-label="manage">
      <%= link_to t('.new', default: t("helpers.links.new")), 
        new_word_path,
        class: 'btn btn-default', 
        tabindex: 21,
        "data-toggle": "tooltip", 
        "data-placement": "bottom", 
        title: t('.new', default: [:"helpers.titles.new"], model: model_class.model_name.human.titleize) %>
    </div>
    <div class="btn-group" role="btn-group" arial-label="navigation">
      <%= link_to t('.up', :default => t("helpers.links.up")), show_words_path, class: 'btn btn-default', "data-toggle": "tooltip", "data-placement": "bottom", title: t('.up', default: t("helpers.titles.up"), :model => t("activerecord.models.word")) %>
      <%= link_to t('.retreat', default: t("helpers.links.retreat")), 
        :back, 
        class: 'btn btn-default', 
        tabindex: 81,
        "data-toggle": "tooltip", 
        "data-placement": "bottom", 
        title: t('.retreat', default: [:"helpers.titles.retreat"]) %>
    </div>
  </div>
</div>

<div class="page-header">
  <h3><%=t '.title', default: model_class.model_name.human.titleize %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:length) %></th>
      <%#<th><%= model_class.human_attribute_name(:created_at) %>
      <%#<th><%= model_class.human_attribute_name(:deleted_at) %>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
    <% @words.each do |word| %>
      <tr>
        <td><%=  i %></td>
        <td><%= link_to word.name, word_path(word), target: "_blank" %></td>
        <td><%= word.length %></td>
        <%#<td><%= word.created_at.strftime("%F") %>
        <%#<td><%= word.deleted_at %>
      </tr>
      <% i = i + 1 %>
    <% end %>
  </tbody>
</table>
<%= paginate @words %>
