<div class="container col-xs-12 col-sm-10 col-md-8 affix">
  <div class="btn-toolbar pull-right" role="toolbar" arial-label="toolbar">
    <div class="btn-group" role="btn-group" arial-label="navigation">
      <%= link_to t('.retreat', default: t("helpers.links.retreat")), 
        :back, 
        class: 'btn btn-default', 
        tabindex: 81, 
        "data-toggle": "tooltip", 
        "data-placement": "bottom", 
        title: t('.retreat', default: [:"helpers.titles.retreat"]) %>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    包含<strong><%= @word.name %></strong>的词语（共<%= @words_have_word.size %>个）
    <button class="btn btn-xs btn-default pull-right" type="button" data-toggle="collapse" data-target="#collapseAddWord" aria-expanded="false" aria-controls="collapseAddWord">添加词语</button>
  </div>
  <div class="panel-body">
    <div class="row">
      <% @words_have_word.each do |word| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <%= link_to word.name, word_path(word) %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="collapse" id="collapseAddWord">
    <div class="panel-footer">
      <% @new_Word = Word.new %>
      <%= form_for @new_Word, :html => { :class => "form-inline" } do |f| %>
        <div class="control-group">
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.submit nil, class: 'btn btn-info' %>
          <button class="btn btn-default" type="button" data-toggle="collapse" data-target="#collapseAddWord" aria-expanded="false" aria-controls="collapseAddWord">取消</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
